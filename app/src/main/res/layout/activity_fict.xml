<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.salim.bigapp.FICT"
    android:clickable="false"
    android:background="@android:color/darker_gray">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="35dp"
    android:text="    Welcome To FICT"
    android:typeface="sans"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="           Select one:"
        android:typeface="sans"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lecturers"
        android:id="@+id/buttonLE"
        android:layout_marginTop="32dp"
        android:contentDescription="salem ayad"
        android:layout_below="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:id="@+id/buttonPRO"
        android:layout_below="@+id/buttonLE"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/buttonGallery"
        android:layout_alignStart="@+id/buttonGallery"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/buttonGallery"
        android:layout_below="@+id/buttonPRO"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/buttonGraduates"
        android:layout_below="@+id/buttonGallery"
        android:layout_marginTop="15dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:enabled="true"
        android:longClickable="false"

         />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@drawable/globe"
        android:layout_below="@+id/buttonGraduates"
        android:layout_toStartOf="@+id/button2"
        android:layout_toLeftOf="@id/button2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:background="#230707"/>

</RelativeLayout>
